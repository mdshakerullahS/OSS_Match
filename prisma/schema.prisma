generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  image         String?
  emailVerified DateTime?
  // githubCache GitHubCache[]
  createdAt     DateTime  @default(now())
  accounts      Account[]
  sessions      Session[]
}

